// Generated Screen Components

import { SmallAppBar, FilledButton, OutlineButton, Switch, Slider, ScrollView } from "@material";
import { MetricCard, MetricData } from "../components/index.slint";
import { StatusIndicator, StatusLevel } from "../components/index.slint";
import { ValueStepper, ValueStepperCompact } from "../components/index.slint";
import { AppData } from "data.slint";

export component HomeScreen inherits Rectangle {
    in-out property <AppData> data;
    
    callback refresh-clicked();
    
    background: transparent;
    
    VerticalLayout {
        SmallAppBar {
            title: "System Info";
        }
        
        Rectangle {
            vertical-stretch: 1;
            
            ScrollView {
                VerticalLayout {
                    padding: 16px;
                    spacing: 24px;
                    
                    Text {
                        text: "Overview";
                        font-size: 14px;
                        font-weight: 500;
                        color: #9E9E9E;
                    }
                    
                    HorizontalLayout {
                        spacing: 12px;
                        
                        MetricCard {
                            data: {
                                label: "Model",
                                value: data.llm-model,
                                unit: "",
                                trend: "",
                                trend-value: ""
                            };
                        }
                        MetricCard {
                            data: {
                                label: "Provider",
                                value: data.llm-provider,
                                unit: "",
                                trend: "",
                                trend-value: ""
                            };
                        }
                    }

                    Text {
                        text: "Status";
                        font-size: 14px;
                        font-weight: 500;
                        color: #9E9E9E;
                    }
                    
                    Rectangle {
                        background: #2A2A2A;
                        border-radius: 12px;
                        
                        VerticalLayout {
                            padding: 12px;
                            spacing: 12px;
                            
                            HorizontalLayout {
                                alignment: space-between;
                                
                                Text {
                                    text: "System";
                                    font-size: 14px;
                                    color: #E0E0E0;
                                }
                                
                                StatusIndicator {
                                    level: StatusLevel.ok;
                                    label: data.system-status;
                                }
                            }
                        }
                    }

                    HorizontalLayout {
                        spacing: 12px;
                        
                        FilledButton {
                            text: "Refresh";
                            clicked => { refresh-clicked(); }
                        }
                    }
                }
            }
        }
    }
}

export component SettingsScreen inherits Rectangle {
    in-out property <AppData> data;
    

    
    background: transparent;
    
    VerticalLayout {
        SmallAppBar {
            title: "Settings";
        }
        
        Rectangle {
            vertical-stretch: 1;
            
            ScrollView {
                VerticalLayout {
                    padding-top: 8px;
                    padding-bottom: 24px;

                    Rectangle {
                        height: 48px;
                        
                        Text {
                            x: 16px;
                            text: "Display";
                            font-size: 14px;
                            font-weight: 500;
                            color: #3AA1F5;
                            vertical-alignment: center;
                        }
                    }
                    
                    Rectangle {
                        background: #2A2A2A;
                        
                        VerticalLayout {
                            Rectangle {
                                height: 56px;
                                
                                HorizontalLayout {
                                    padding-left: 16px;
                                    padding-right: 16px;
                                    
                                    VerticalLayout {
                                        horizontal-stretch: 1;
                                        alignment: center;
                                        
                                        Text {
                                            text: "Brightness";
                                            font-size: 16px;
                                            color: white;
                                        }
                                    }
                                    
                                    ValueStepperCompact {
                                        value <=> data.brightness;
                                        min: 0;
                                        max: 100;
                                        step: 10;
                                        unit: "%";
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

